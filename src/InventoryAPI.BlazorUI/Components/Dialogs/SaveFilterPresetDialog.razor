@using InventoryAPI.BlazorUI.Models

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Save Filter Preset</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="PresetName" Label="Preset Name" Required="true" Variant="Variant.Outlined" />
        <MudSwitch @bind-Checked="IsShared" Label="Share with others" Color="Color.Primary" Class="mt-2" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Save" Disabled="@string.IsNullOrWhiteSpace(PresetName)">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string PresetName { get; set; } = string.Empty;

    [Parameter]
    public bool IsShared { get; set; } = false;

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private void Save()
    {
        MudDialog?.Close(new SavePresetResult { Name = PresetName, IsShared = IsShared });
    }

    public class SavePresetResult
    {
        public string Name { get; set; } = string.Empty;
        public bool IsShared { get; set; }
    }
}
